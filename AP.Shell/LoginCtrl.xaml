<UserControl x:Class="AP.Shell.LoginCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="104.478" Opacity="0.5" IsVisibleChanged="UserControl_IsVisibleChanged"
             >
    <Border CornerRadius="8,8,0,8" BorderBrush="Black" BorderThickness="1,1,1,1">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity="0.75" />
        </Border.Background>
        <Grid>
            <StackPanel>
                <TextBox HorizontalAlignment="Right" MinWidth="150" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="username" Margin="20,20,20,20" KeyDown="username_KeyDown"/>
                <PasswordBox  HorizontalAlignment="Right" MinWidth="150" x:Name="password" Margin="20,0,20,20" KeyDown="password_KeyDown"/>
            </StackPanel>

    </Grid>
    </Border>
</UserControl>
